<!-- app/views/tasks/index.html.erb -->

<h1>業務一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>業務名</th>
      <th>部署名</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task_path(task) %></td> <!-- タスクの詳細ページへのリンクを追加 -->
        <td><%= task.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
