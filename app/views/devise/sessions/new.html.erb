
<body>
<div id="particles-js"></div>
<div id="wrapper">
  <div class="contents row">
  <div class="container">
    <h2>ログイン〜</h2>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="field">
        <%= f.label :メールアドレスを記入してください。 %><br />
        <%= f.email_field :email, autofocus: true,class: "author-select"  %>
      </div>

      <div class="field">
        <%= f.label :パスワードを打ってください %><br />
        <%= f.password_field :password, autocomplete: "off",class: "author-select"  %>
      </div>



      <div class="actions">
        <%= f.submit "ログイン", class: "search-button", data: { turbo: false } %>
      </div>
      <p class=masa>© 2024 Masaki_yoshida.</p>
    <% end %>
  </div>
  
</div>
</body>

