<div id="wrapper">
  <div class="contents row">
  <div class="container">
    <h2>新規登録画面</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :名前を入力してください %> <em>(10 文字以上でお願いします)</em><br />
        <%= f.text_field :nickname, autofocus: true, maxlength: "10",class: "author-select"  %>
      </div>

      <div class="field">
        <%= f.label :メールアドレスを入力お願いします %><br />
        <%= f.email_field :email, class: "author-select"   %>
      </div>

      <div class="field">
        <%= f.label :パスワードを決め、入力お願いします。 %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上でお願いします,)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off",class: "author-select"  %>
      </div>

      <div class="field">
        <%= f.label :パスワードを再入してください。 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" ,class: "author-select" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "search-button" %>
        <%= link_to 'トップに戻る', viwes_path, class: "search-button" %>
      </div>
      
    <% end %>
  </div>
</div>